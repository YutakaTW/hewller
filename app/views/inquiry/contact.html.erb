<div class="banner_bottom">
    <div class="container">
      <div class="mail_form">
        <h3 class="tittle-w3ls"><%= t('view.sendus') %></h3>
        <div class="inner_sec_info_wthree_agile">
          <%= form_for @inquiry, :url => contact_confirm_path do |f| %>

            <% if @inquiry.errors.any? %>
              <div class="alert alert-danger" role="alert">
                <strong><%= t('view.alert') %></strong>
                <ul>
                  <% @inquiry.errors.each do |attr, msg| %>
                    <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <span class="input input--chisato"><%= f.text_field :name, :class => 'input__field input__field--chisato', :placeholder => t('view.name'), autofocus: true %></span>
            <span class="input input--chisato"><%= f.email_field :email, :class => 'input__field input__field--chisato', :placeholder => t('view.email'), autofocus: true %></span>
            <span class="input input--chisato resp"><%= f.text_field :subject, :class => 'input__field input__field--chisato', :placeholder => t('view.subject'), autofocus: true %></span>
            <%= f.text_area :message, rows: 5, :class => 'input__label-content input__label-content--chisato', :placeholder => t('view.inquiry'), autofocus: true %>

          <%= f.submit t('view.confirm'), :class => 'btn btn-default' %>
        <% end %>

        </div>
      </div>
      <%= render 'partial/map' %>
    </div>
